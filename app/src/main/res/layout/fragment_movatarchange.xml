<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="de.htw_berlin.movation.MovatarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txtFitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitness"
                android:layout_weight="1"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/btnShareMovatar"
                android:background="@drawable/ic_menu_share"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:layout_weight="1" />
            </LinearLayout>


        <ImageView
            android:id="@+id/imgMovatar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnMovatarCategoryChangeLeft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="{gmd-arrow-back}"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:clickable="true"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnMovatarCategoryChangeRight"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="{gmd-arrow-forward}"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:clickable="true"
                android:layout_marginRight="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnMovatarChangeLeft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="{gmd-arrow-back}"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:clickable="true"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:textAlignment="center" />


            <Button
                android:id="@+id/btnMovatarChangeRight"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="{gmd-arrow-forward}"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:clickable="true"
                android:layout_marginRight="20dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
